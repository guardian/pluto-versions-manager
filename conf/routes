
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           @controllers.IndexController.index(path="/")
GET     /api/known_projects         @controllers.ProjectsController.knownProjects
GET     /api/project/:project_id/jobs @controllers.ProjectsController.jobsForProject(project_id:Long)
GET     /api/project/:project_id/branches @controllers.ProjectsController.branchesForProject(project_id:Long)
GET     /api/project/:project_id/:branch_name/:job_name/artifacts @controllers.ProjectsController.checkArtifacts(project_id:Long, branch_name:String, job_name:String)
GET     /api/project/:project_id/:branch_name/:job_name/buildinfo @controllers.ProjectsController.getBuildInfo(project_id:Long, branch_name:String, job_name:String)

GET     /api/project/:project_id/deployment @controllers.DeploymentsController.getDeploymentForProjectId(project_id:Long)
GET     /api/known_deployments      @controllers.DeploymentsController.listDeployments
POST    /api/deployment/update      @controllers.DeploymentsController.updateDeployment

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /*tail                           @controllers.IndexController.index(tail)